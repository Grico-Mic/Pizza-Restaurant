@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<div id="carouselExampleIndicators" class="carousel slide w-50 mx-md-auto"  data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>

    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://cdn.britannica.com/08/177308-050-94D9D6BE/Food-Pizza-Basil-Tomato.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://lh3.googleusercontent.com/p/AF1QipPg_3rP0g2yMMQB8e57e6bkm4RUlMgqWo4zmCxX=s680-w680-h510" class="d-block w-100" alt="...">
        </div>

    </div>
    <button class="carousel-control-prev" role="button" hrev="#carouselExampleIndicators" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" role="button" href="#carouselExampleIndicators" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>

@foreach (var offer in Model.Offers)
    {
        <div class="card mt-4 text-center">
            <div class="card-body">
                <h2 class="card-title">@offer.Title</h2>
                <p class="card-text">@offer.Description</p>
                <p class="card-text">Valid to: @offer.ValidTo.ToString("dd-MM-yyyy")</p>
            </div>
         </div>
     }
