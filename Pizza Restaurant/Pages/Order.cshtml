@page
@model Pizza_Restaurant.Pages.OrderModel
@{
    ViewData["Title"] = "Order";
}
<div class="container"  style=" margin-top: 20px; padding: 20px;">
    <form asp-page="Order" method="post">
        <div class="form-group">
            <label asp-for="@Model.Order.Name">Name:</label>
            <input type="text" asp-for="@Model.Order.Name" class="form-control" placeholder="Enter name" required />
            <span asp-validation-for="@Model.Order.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Order.Surname">Surname:</label>
            <input type="text" asp-for="@Model.Order.Surname" class="form-control" placeholder="Enter surname" required />
            <span asp-validation-for="@Model.Order.Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Order.Address">Address:</label>
            <input type="text" asp-for="@Model.Order.Address" class="form-control" placeholder="Enter address" required />
            <span asp-validation-for="@Model.Order.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Order.Phone">Phone:</label>
            <input type="text" asp-for="@Model.Order.Phone" class="form-control" placeholder="Enter phone" required />
            <span asp-validation-for="@Model.Order.Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Order.Message">Message:</label>
            <textarea asp-for="@Model.Order.Message" rows="4" class="form-control" placeholder="Enter message" required></textarea>
            <span asp-validation-for="@Model.Order.Message" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Order</button>
    </form>
</div>

<div style="margin-top: 20px; padding: 20px;">
    <form asp-page="Order" asp-page-handler="Subscribe" method="post">
        <div>
            <div class="input-group mb-3">
                <label for="subscriptionEmail"></label>
                <input type="email" class="form-control" name="email" placeholder="Enter email" id="subscriptionEmail" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Subscribe</button>
                </div>
            </div>
            <span class="form-text text-muted">We'll never share your email with anyone else.</span>
        </div>
    </form>
</div>

